generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==============================================
// TODO MANAGEMENT MODELS
// ==============================================
model Todo {
  id          String     @id @default(uuid())              
  title       String                                       
  description String?                                     
  dueDate     DateTime?                                    
  completed   Boolean    @default(false)                   
  createdAt   DateTime   @default(now())                   
  updatedAt   DateTime   @updatedAt                        

  // Relations
  categoryId  String?
  category    TodoCategory? @relation(fields: [categoryId], references: [id])
  priorityId  String?
  priority    TodoPriority? @relation(fields: [priorityId], references: [id])
  
  @@map("todo")
}

model TodoCategory {
  id        String   @id @default(uuid())
  name      String
  color     String?  // Hex color for UI
  icon      String?  // Icon name/emoji
  todos     Todo[]
  createdAt DateTime @default(now())
  
  @@map("todo_categories")
}

model TodoPriority {
  id        String   @id @default(uuid())
  name      String   // Low, Medium, High, Urgent
  level     Int      // 1-5 for sorting
  color     String?  // Color coding
  todos     Todo[]
  createdAt DateTime @default(now())
  
  @@map("todo_priorities")
}
